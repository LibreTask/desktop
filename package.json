{
  "name": "Algernon",
  "version": "0.0.1",
  "description": "Algernon - a minimalist task manager",
  "author": "Algernon",
  "homepage": "https://algernon.io",
  "author": {
      "name": "Algernon",
      "email": "support@algernon.io",
      "url": "https://algernon.io"
    },
  "scripts": {
    "build": "npm run build-main & npm run build-renderer",
    "build-dll": "cross-env NODE_ENV=development node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.renderer.dev.dll.js --colors",
    "build-main": "cross-env NODE_ENV=production node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.main.prod.js --colors",
    "build-renderer": "cross-env NODE_ENV=production node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.renderer.prod.js --colors",
    "dev": "cross-env START_HOT=1 npm run start-renderer-dev",
    "package": "npm run build && build --publish never",
    "package-all": "npm run build && build -mwl",
    "package-mac": "npm run build && build --mac",
    "package-linux": "npm run build && build --linux",
    "package-win": "npm run build && build --win --x64",
    "postinstall": "npm run build-dll & electron-builder install-app-deps & node node_modules/fbjs-scripts/node/check-dev-engines.js package.json",
    "precommit": "lint-staged",
    "start": "cross-env NODE_ENV=production electron ./app/",
    "start-main-dev": "cross-env HOT=1 NODE_ENV=development electron -r babel-register ./app/main.dev",
    "start-renderer-dev": "cross-env NODE_ENV=development node --trace-warnings -r babel-register ./node_modules/webpack-dev-server/bin/webpack-dev-server --config webpack.config.renderer.dev.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "build": {
    "productName": "Algernon",
    "appId": "io.algernon.Algernon",
    "files": [
      "dist/",
      "node_modules/",
      "app.html",
      "main.prod.js",
      "main.prod.js.map",
      "package.json",
      "build/"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-dynamic-import-webpack": "^1.0.1",
    "babel-plugin-flow-runtime": "^0.11.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.3",
    "electron": "^1.7.4",
    "electron-builder": "^19.8.0",
    "electron-devtools-installer": "^2.2.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "fbjs-scripts": "^0.8.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.29.0",
    "husky": "^0.13.3",
    "json-loader": "^0.5.4",
    "lint-staged": "^3.5.0",
    "minimist": "^1.2.0",
    "prettier": "^1.5.2",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.1",
    "url-loader": "^0.5.7",
    "webpack": "^3.0.0",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-dev-server": "^2.5.0",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "buffer": "^5.0.2",
    "dateformat": "^2.0.0",
    "electron-debug": "^1.1.0",
    "font-awesome": "^4.7.0",
    "material-ui": "^0.16.6",
    "moment": "^2.18.1",
    "pouchdb-browser": "^6.1.2",
    "pouchdb-upsert": "^2.1.0",
    "react": "^15.6.1",
    "react-addons-shallow-compare": "^15.5.1",
    "react-dates": "^8.2.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "3.0.0-beta.6",
    "react-icons": "^2.2.3",
    "react-redux": "^4.4.6",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "react-sidebar": "^2.2.1",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "redux-logger": "^2.10.2",
    "redux-thunk": "^2.2.0",
    "request-promise": "^4.1.1",
    "source-map-support": "^0.4.6",
    "uuid": "^3.1.0",
    "validator": "^6.2.1"
  },
  "devEngines": {
    "node": ">=7.x",
    "npm": ">=4.x"
  }
}
